<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head.ejs') -%>
    <title><%= title %></title>
  </head>
  <body>
    <div class="wrapper">
      <%- include('partials/header.ejs'); %>
      <main class="main">
        <dialog id="create-game-modal">
          <%- include('partials/createGameForm.ejs', {studios: locals.studios});
          %>
        </dialog>
        <div class="container sidebar">
          <form class="filters" action="/" method="get">
            <fieldset>
              <legend>Filter by genre</legend>
              <% if (locals.genres) { %> <% genres.forEach(genre => { %>
              <input
                type="checkbox"
                name="genre"
                id="<%= genre.name %>"
                value="<%= genre.name %>"
              />
              <label for="<%= genre.name %>"><%= genre.name %> </label>
              <% }) %> <% } %>
            </fieldset>
            <fieldset>
              <legend>Filter by studio</legend>
              <% if (locals.studios) { %> <% studios.forEach(studio => { %>
              <input
                type="checkbox"
                name="studio"
                id="<%= studio.id %>"
                value="<%= studio.id %>"
              />
              <label for="<%= studio.id %>"><%= studio.name %></label>
              <% }) %> <% } %>
            </fieldset>
            <button type="submit">submit</button>
          </form>
        </div>
        <div class="container content">
          <section class="description">
            <h1>Games Inventory</h1>
            <p>
              This is the games inventory. Here you can manage a database of
              games, studios and genres. Create, update, delete items, or filter
              them by Genre and studio.
            </p>
          </section>
          <section class="filter-menu">
            Here should be the form to filter the sidebar
          </section>
          <div class="create-links">
            <a class="btn btn-info" href="/genre/create">Add genre</a>
            <a class="btn btn-info" href="/genre/update">Update genre</a>
            <a class="btn btn-info" href="/studio/create">Add studio</a>
            <a class="btn btn-info" href="/studio/update">Update studio</a>
          </div>
          <section class="games-container">
            <div class="games-header game-row">
              <h2>Title</h2>
              <h2>Publish Date</h2>
              <h2>Rating</h2>
              <span></span>
              <button
                class="btn btn-success add-game-btn"
                type="button"
                commandfor="create-game-modal"
                command="show-modal"
              >
                +
              </button>
            </div>
            <% if (locals.games) { %> <% games.forEach(game => { %>
            <div class="game-row">
              <p class="game-title"><%= game.title %></p>
              <p class="game-pub_date"><%= game.publish_date %></p>
              <p class="game-rating"><%= game.rating %></p>
              <a
                class="update-game-btn btn btn-outline-primary"
                href="/<%= game.id %>/update"
                >Update</a
              >
              <form
                class="delete-game-btn"
                action="/<%= game.id %>/delete"
                method="POST"
                style="display: inline"
              >
                <button
                  class="btn btn-outline-danger"
                  type="submit"
                  onclick="return confirm('Are you sure you want to delete this game?');"
                >
                  Delete
                </button>
              </form>
            </div>

            <% }) %> <% } %>
          </section>
        </div>
      </main>
      <footer><%- include('partials/footer') -%></footer>
    </div>
  </body>
</html>
